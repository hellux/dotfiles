# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors =            true
    color_good =        "#BBBBBB"
    color_bad =         "#CC1616"
    color_degraded =    "#BBBBBB"
    interval =          1
    output_format =     "i3bar"
}

order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 0"
order += "volume master"
#order += "cpu_usage"
order += "disk /"
#order += "cpu_temperature 0"
#order += "load"
order += "tztime local"

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

load {
    format = "%1min, %5min, %15min"
}

cpu_usage {
    format = "U: %usage"
}

wireless _first_ {
    format_up = " %essid"
    format_down = "not connected"
}

battery 0 {
    format = " %percentage  %remaining"
    format_down = "NO BAT"
    status_chr = " "
    status_bat = " "
    status_full = " "
    path = "/sys/class/power_supply/BAT0/uevent"
    hide_seconds = true
    integer_battery_capacity = true
    low_threshold = 40
    threshold_type = "percentage"
}

volume master {
    format = " %volume"
    format_muted = " %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

disk "/" {
    format = "%avail"
}

cpu_temperature 0 {
    format = "%degrees °C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp4_input"
    max_threshold = 56
}

tztime local {
    format = "%A %Y-%m-%d %H:%M "
}

