### OPTIONS

# hide borders indicating next window position
hide_edge_borders both

# remove titlebar
new_window 1pixel

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Source Code Pro 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

### KEYBIND ASSIGNMENTS

bindsym $mod+Shift+Return $terminal
bindsym $mod+p $launcher
bindsym $mod+Shift+b $set_backlight
bindsym $mod+Shift+v $set_volume
bindsym $mod+Shift+g $toggle_governor
bindsym $mod+F7 $lock

## ACPI/function keys

# media keys
bindsym XF86AudioNext $media_next
bindsym XF86AudioPrev $media_prev
bindsym XF86AudioPlay $media_toggle
bindsym XF86AudioStop $media_stop

bindsym $mod+Right $media_next
bindsym $mod+Left $media_prev
bindsym $mod+Down $media_toggle
bindsym $mod+Up exec $media_stop

# volume keys 
bindsym XF86AudioMute $volume_toggle
bindsym XF86AudioLowerVolume $volume_dec
bindsym XF86AudioRaiseVolume $volume_inc

bindsym $mod+F10 $volume_toggle
bindsym $mod+F11 $volume_dec
bindsym $mod+F12 $volume_inc

# brightness keys
bindsym XF86MonBrightnessDown $backlight_dec
bindsym XF86MonBrightnessUp $backlight_inc
bindsym $mod+F5 $backlight_dec
bindsym $mod+F6 $backlight_inc

bindsym $mod+F1 $suspend

## built-in

# kill focused window
bindsym $mod+Shift+c kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+b split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+n layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace $wspace1
bindsym $mod+2 workspace $wspace2
bindsym $mod+3 workspace $wspace3
bindsym $mod+4 workspace $wspace4
bindsym $mod+5 workspace $wspace5
bindsym $mod+6 workspace $wspace6
bindsym $mod+7 workspace $wspace7
bindsym $mod+8 workspace $wspace8
bindsym $mod+9 workspace $wspace9
bindsym $mod+0 workspace $wspace10

# next / prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# last workspace
bindsym $mod+z workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $wspace1
bindsym $mod+Shift+2 move container to workspace $wspace2
bindsym $mod+Shift+3 move container to workspace $wspace3
bindsym $mod+Shift+4 move container to workspace $wspace4
bindsym $mod+Shift+5 move container to workspace $wspace5
bindsym $mod+Shift+6 move container to workspace $wspace6
bindsym $mod+Shift+7 move container to workspace $wspace7
bindsym $mod+Shift+8 move container to workspace $wspace8
bindsym $mod+Shift+9 move container to workspace $wspace9
bindsym $mod+Shift+0 move container to workspace $wspace10

# reload the configuration file
bindsym $mod+Shift+t reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Log out of X?' -b 'Yes' 'i3-msg exit'"

### MODES

# resize window (you can also use the mouse for that)
mode "resize" {
        set $length 1
        bindsym h resize shrink width $length px or $length ppt
        bindsym k resize grow height $length px or $length ppt
        bindsym j resize shrink height $length px or $length ppt
        bindsym l resize grow width $length px or $length ppt

        #bindsym Left resize shrink width 5 px or 5 ppt
        #bindsym Up resize grow height 5 px or 5 ppt
        #bindsym Down resize shrink height 5 px or 5 ppt
        #bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

### i3 BAR

# Start i3bar to display a workspace bar
bar {
    status_command      i3status | ~/.config/i3status/wrapper.py
    separator_symbol    " | "
	position		    top
    font                pango:Source Code Pro 9
    bindsym button4 nop
    bindsym button5 nop
    #tray_output         none
   
    colors {
        background          $gn_bg
        statusline          $gn_text
        separator           $gn_sep

        #                   border  bg      text     indicator
        focused_workspace   $sl_b   $sl_bg  $sl_text #FFFFFF
        active_workspace    $ac_b   $ac_bg  $ac_text #FFFFFF
        inactive_workspace  $in_b   $in_bg  $in_text #FFFFFF
        urgent_workspace    $ur_b   $ur_bg  $ur_text #FFFFFF
        binding_mode        $md_b   $md_bg  $md_text #FFFFFF
    }
}

