client.unfocused        $ac_b   #222222 $in_text #292d2e   #222222
client.urgent           $ur_b   #900000 $ur_text #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff  #000000   #0c0c0c
client.background       #ffffff
