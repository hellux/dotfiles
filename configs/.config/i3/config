# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

### AUTOSTART 

exec --no-startup-id ~/.fehbg #set wallpaper (last used)
exec --no-startup-id dunst #desktop notification daemon, ~/.config/dunst/dunstrc
exec ~/src/py/batprof/batprofd.py

### VARIABLE ASSIGNMENTS

## colors

# general
set $gn_bg "#222222"
set $gn_text "#bbbbbb"
set $gn_sep "#555555"
# selected / focused / highlighted
set $sl_b "#4C7899"
set $sl_bg "#285577"
set $sl_text "#FFFFFF"
# inactive
set $in_b "#333333"
set $in_bg "#222222"
set $in_text "#888888"
# urgent
set $ur_b "#2F343A"
set $ur_bg "#904400"
set $ur_text "#FFFFFF"
# mode
set $md_b "#2F434A"
set $md_bg "#900000"
set $md_text "#FFFFFF"
# active
set $ac_b "#333333"
set $ac_bg "#5F676A"
set $ac_text "FFFFFFF"

# workspace names
set $wspace1 "1 "
set $wspace2 "2 "
set $wspace3 "3 "
set $wspace4 "4"
set $wspace5 "5"
set $wspace6 "6 "
set $wspace7 "7 "
set $wspace8 "8 "
set $wspace9 "9 "
set $wspace10 "10 "

# commands
set $terminal "exec urxvt"
set $launcher exec --no-startup-id dmenu_run -lh 22 -fn \
'Source Code Pro:size=9' -nb '#222222' -nf '#bbbbbb' -sb '#285577' \
-sf '#FFFFFF' -p 'Run:'
set $set_backlight "exec i3-input -F 'exec xbacklight -set %s' -P 'Backlight: '"
set $set_volume "exec i3-input -F 'exec amixer set Master %s' -P 'Volume: '"
set $toggle_governor "exec ~/.config/i3/toggle_governor.sh"
set $suspend "exec systemctl suspend"
set $lock "exec ~/.config/i3/flock/lock"

set $media_next "exec playerctl next"
set $media_prev "exec playerctl previous"
set $media_toggle "exec playerctl play-pause"
set $media_stop "exec playerctl stop"

set $backlight_inc exec xbacklight -inc 10
set $backlight_dec exec xbacklight -dec 10

set $volume_toggle exec amixer set Master toggle
set $volume_inc exec amixer set Master 5+
set $volume_dec exec amixer set Master 5-

# mod key
set $mod Mod4

