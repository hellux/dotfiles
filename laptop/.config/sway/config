exec --no-startup-id ~/scripts/init_laptop.sh

### VARIABLE ASSIGNMENTS

## colors
set $gn_bg "#222222"
set $gn_text "#bbbbbb"
set $gn_sep "#555555"

# workspace names
set $wspace1 "1 "
set $wspace2 "2 "
set $wspace3 "3 "
set $wspace4 "4 "
set $wspace5 "5"
set $wspace6 "6"
set $wspace7 "7 "
set $wspace8 "8 "
set $wspace9 "9 "
set $wspace10 "10"

# commands
set $browser "qutebrowser"
set $terminal "urxvt"
set $jtsyken ~/scripts/toggle_layout.sh se dvorak ru ""
set $qwerty ~/scripts/toggle_layout.sh se dvorak se ""
set $toggle_governor ~/.config/i3/toggle_governor.sh
