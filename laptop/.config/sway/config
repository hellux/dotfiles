### OPTIONS

# hide borders indicating next window position
hide_edge_borders both

# remove titlebar
default_border none

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font Source Code Pro 14

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

### KEYBIND ASSIGNMENTS

bindsym $mod+Shift+Return exec $terminal
bindsym $mod+Shift+f exec $browser
bindsym $mod+g $launcher
bindsym $mod+F9 exec $jtsyken
bindsym $mod+F10 exec $qwerty
bindsym $mod+Shift+g exec $toggle_governor
bindsym $mod+F7 exec $lock

## ACPI/function keys

# volume keys 
#bindsym XF86AudioMute $volume_toggle
bindsym XF86AudioLowerVolume exec $volume_dec
bindsym XF86AudioRaiseVolume exec $volume_inc

#bindsym $mod+F10 $volume_toggle
bindsym $mod+F11 exec $volume_dec
bindsym $mod+F12 exec $volume_inc

# brightness keys
bindsym XF86MonBrightnessDown exec $backlight_dec
bindsym XF86MonBrightnessUp exec $backlight_inc
bindsym $mod+F5 exec $backlight_dec
bindsym $mod+F6 exec $backlight_inc

bindsym $mod+F1 exec $suspend

## built-in

# kill focused window
bindsym $mod+c kill

# change monitor
bindsym $mod+m move workspace to output left

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+s split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+n layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+a workspace $wspace1
bindsym $mod+o workspace $wspace2
bindsym $mod+e workspace $wspace3
bindsym $mod+u workspace $wspace4
bindsym $mod+i workspace $wspace5
bindsym $mod+aring workspace $wspace6
bindsym $mod+adiaeresis workspace $wspace7
bindsym $mod+odiaeresis workspace $wspace8
bindsym $mod+p workspace $wspace9
bindsym $mod+y workspace $wspace10

# move focused container to workspace
bindsym $mod+Shift+a move container to workspace $wspace1
bindsym $mod+Shift+o move container to workspace $wspace2
bindsym $mod+Shift+e move container to workspace $wspace3
bindsym $mod+Shift+u move container to workspace $wspace4
bindsym $mod+Shift+i move container to workspace $wspace5
bindsym $mod+Shift+aring move container to workspace $wspace6
bindsym $mod+Shift+adiaeresis move container to workspace $wspace7
bindsym $mod+Shift+odiaeresis move container to workspace $wspace8
bindsym $mod+Shift+p move container to workspace $wspace9
bindsym $mod+Shift+y move container to workspace $wspace10

# next / prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# last workspace
bindsym $mod+z workspace back_and_forth

# reload the configuration file
bindsym $mod+Shift+t reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exit

### MODES

# resize window (you can also use the mouse for that)
mode "resize" {
        set $length 1
        bindsym h resize shrink width $length px or $length ppt
        bindsym k resize grow height $length px or $length ppt
        bindsym j resize shrink height $length px or $length ppt
        bindsym l resize grow width $length px or $length ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

### i3 BAR

# Start i3bar to display a workspace bar
bar {
    status_command      i3status | ~/.config/i3status/wrapper.py
    separator_symbol    " | "
	position		    top
   
    colors {
        background          $gn_bg
        statusline          $gn_text
        separator           $gn_sep
    }
}
