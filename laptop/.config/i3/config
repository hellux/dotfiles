output "*" background /home/noah/wp_polar.png fill
exec xrdb -merge -I$HOME ~/.Xresources

### VARIABLE ASSIGNMENTS

## colors

# general
set $gn_bg "#222222"
set $gn_text "#bbbbbb"
set $gn_sep "#555555"
# selected / focused / highlighted
set $sl_b "#4C7899"
set $sl_bg "#285577"
set $sl_text "#FFFFFF"
# inactive
set $in_b "#333333"
set $in_bg "#222222"
set $in_text "#888888"
# urgent
set $ur_b "#2F343A"
set $ur_bg "#904400"
set $ur_text "#FFFFFF"
# mode
set $md_b "#2F434A"
set $md_bg "#900000"
set $md_text "#FFFFFF"
# active
set $ac_b "#333333"
set $ac_bg "#5F676A"
set $ac_text "FFFFFFF"

# workspace names
set $wspace1 "1 "
set $wspace2 "2 "
set $wspace3 "3 "
set $wspace4 "4 "
set $wspace5 "5"
set $wspace6 "6"
set $wspace7 "7 "
set $wspace8 "8 "
set $wspace9 "9 "
set $wspace10 "10"

# commands
set $browser "qutebrowser"
set $terminal "urxvt"
set $toggle_layout ~/scripts/layout.sh
set $toggle_governor ~/.config/i3/toggle_governor.sh
set $suspend systemctl suspend
set $lock ~/.config/i3/flock/locK
set $launcher exec --no-startup-id dmenu_run -lh 29 -fn \
'Source Code Pro:size=7' -nb '#222222' -nf '#bbbbbb' -sb '#285577' \
-sf '#FFFFFF' -p 'Run:'

set $backlight_inc light -A 10
set $backlight_dec light -U 10

set $volume_toggle amixer set Master toggle
set $volume_inc amixer set Master 5+
set $volume_dec amixer set Master 5-

# mod key
set $mod Mod1

### WORKSPACE ASSIGNMENTS

# 1 web
assign [class="qutebrowser"] $wspace1

# 2 term

# 3 vim

# 4 video
assign [class="^mpv$"] $wspace10

# 5

# 6 transfer
assign [class="^qBittorrent$"] $wspace6

# 7 steam
assign [class="^Steam$"] $wspace7

# 8 game

# 9 music

# 10

### OPTIONS

# hide borders indicating next window position
hide_edge_borders both

# remove titlebar
border 1pixel 
default_border none
new_window 1pixel

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font Source Code Pro 14

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

### KEYBIND ASSIGNMENTS

bindsym $mod+Shift+Return exec $terminal
bindsym $mod+Shift+f exec $browser
bindsym $mod+g $launcher
bindsym $mod+F9 exec $toggle_layout
bindsym $mod+Shift+g exec $toggle_governor
bindsym $mod+F7 exec $lock

## ACPI/function keys

# volume keys 
#bindsym XF86AudioMute $volume_toggle
bindsym XF86AudioLowerVolume exec $volume_dec
bindsym XF86AudioRaiseVolume exec $volume_inc

#bindsym $mod+F10 $volume_toggle
bindsym $mod+F11 exec $volume_dec
bindsym $mod+F12 exec $volume_inc

# brightness keys
bindsym XF86MonBrightnessDown exec $backlight_dec
bindsym XF86MonBrightnessUp exec $backlight_inc
bindsym $mod+F5 exec $backlight_dec
bindsym $mod+F6 exec $backlight_inc

bindsym $mod+F1 exec $suspend

## built-in

# kill focused window
bindsym $mod+c kill

# change monitor
bindsym $mod+m move workspace to output left

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+s split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+n layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+a workspace $wspace1
bindsym $mod+o workspace $wspace2
bindsym $mod+e workspace $wspace3
bindsym $mod+u workspace $wspace4
bindsym $mod+i workspace $wspace5
bindsym $mod+aring workspace $wspace6
bindsym $mod+adiaeresis workspace $wspace7
bindsym $mod+odiaeresis workspace $wspace8
bindsym $mod+p workspace $wspace9
bindsym $mod+y workspace $wspace10

# move focused container to workspace
bindsym $mod+Shift+a move container to workspace $wspace1
bindsym $mod+Shift+o move container to workspace $wspace2
bindsym $mod+Shift+e move container to workspace $wspace3
bindsym $mod+Shift+u move container to workspace $wspace4
bindsym $mod+Shift+i move container to workspace $wspace5
bindsym $mod+Shift+aring move container to workspace $wspace6
bindsym $mod+Shift+adiaeresis move container to workspace $wspace7
bindsym $mod+Shift+odiaeresis move container to workspace $wspace8
bindsym $mod+Shift+p move container to workspace $wspace9
bindsym $mod+Shift+y move container to workspace $wspace10

# next / prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# last workspace
bindsym $mod+z workspace back_and_forth

# reload the configuration file
bindsym $mod+Shift+t reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exit

### MODES

# resize window (you can also use the mouse for that)
mode "resize" {
        set $length 1
        bindsym h resize shrink width $length px or $length ppt
        bindsym k resize grow height $length px or $length ppt
        bindsym j resize shrink height $length px or $length ppt
        bindsym l resize grow width $length px or $length ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

### i3 BAR

# Start i3bar to display a workspace bar
bar {
    status_command      i3status | ~/.config/i3status/wrapper.py
    separator_symbol    " | "
	position		    top
    font                Source Code Pro 13
    bindsym button4 nop
    bindsym button5 nop
    #tray_output         none
   
    colors {
        background          $gn_bg
        statusline          $gn_text
        separator           $gn_sep

        #                   border  bg      text     indicator
        focused_workspace   $sl_b   $sl_bg  $sl_text #FFFFFF
        active_workspace    $ac_b   $ac_bg  $ac_text #FFFFFF
        inactive_workspace  $in_b   $in_bg  $in_text #FFFFFF
        urgent_workspace    $ur_b   $ur_bg  $ur_text #FFFFFF
        binding_mode        $md_b   $md_bg  $md_text #FFFFFF
    }
}

