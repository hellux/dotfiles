# Global properties
command=$I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME

[battery]
command=$I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME
interval=1

[volume]
command=$I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME
interval=1

[iface]
command=$I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME
interval=5
separator=false

[bandwidth3]
command=PRINTF_COMMAND='printf "%5.2f%5.2f\n", wx, rx' $I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME -u MB -t1
interval=persist

[disk]
DIR=/
interval=5
separator=false

#[disk-io]
#command=LABEL=" " $I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME -s" " -P2 -M -t1 -R '/.+/'
#interval=persist

[load_average]
interval=1
separator=false

[cpu_usage]
command=LABEL=" " $I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME
interval=1

[temperature]
interval=1
separator=false

[memory]
interval=5

[time]
command=date '+%Y-%m-%d %H:%M'
interval=5
